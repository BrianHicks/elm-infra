{
    "variables": {
        "do_api_token": ""
    },
    "builders": [{
        "type": "digitalocean",
        "api_token": "{{user `do_api_token`}}",
        "image": "ubuntu-16-04-x64",
        "region": "nyc1",
        "size": "512mb",
        "ssh_username": "root",
        "snapshot_name": "elm-infra-base_{{isotime \"20060102030405\"}}"
    }],
    "provisioners": [{
        "type": "shell",
        "scripts": [
            "packer/base.sh",
            "packer/docker.sh",
            "packer/monitoring.sh",
            "packer/unattended-upgrades.sh",
            "packer/fail2ban.sh"
        ]
    }]
}
